<SplitPane dividerPositions="0.5" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
   <items>
      <TableView fx:id="tableDisplay" prefHeight="200.0" prefWidth="450.0">
        <columns>
          <TableColumn fx:id="col1" onEditCommit="#editValue" prefWidth="150.0" text="Value ($)" />
          <TableColumn fx:id="col2" onEditCommit="#editSerial" prefWidth="150.0" text="Serial Number" />
            <TableColumn fx:id="col3" onEditCommit="#editName" prefWidth="150.0" text="Name" />
        </columns>
      </TableView>
      <AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="200.0">
         <children>
            <Button fx:id="addItemButton" layoutX="53.0" layoutY="35.0" mnemonicParsing="false" onAction="#addItemClicked" text="Add New Item" />
            <Button fx:id="editItemButton" layoutX="68.0" layoutY="105.0" mnemonicParsing="false" onAction="#editItemClicked" text="Edit Item" />
            <Button fx:id="removeItemButton" layoutX="56.0" layoutY="175.0" mnemonicParsing="false" onAction="#removeItemClicked" text="Remove Item" />
            <TextField fx:id="searchField" layoutX="20.0" layoutY="250.0" promptText="Search Field:" />
            <ChoiceBox fx:id="searchByBox" layoutX="25.0" layoutY="300.0" prefWidth="150.0" />
            <Button fx:id="searchButton" layoutX="73.0" layoutY="350.0" mnemonicParsing="false" onAction="#searchClicked" text="Search" />
         </children>
      </AnchorPane>
   </items>
</SplitPane>
