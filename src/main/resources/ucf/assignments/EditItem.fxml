<AnchorPane onMouseClicked="#showData" prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <TextField fx:id="serialField" layoutX="120.0" layoutY="50.0" promptText="Enter Serial Number:" />
